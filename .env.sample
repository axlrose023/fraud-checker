# Environment
APP__ENV=local

# API Configuration
APP__API__PORT=8000
APP__API__ALLOWED_HOSTS=["*"]

# Fraud Configuration
APP__FRAUD__BLOCK_SCORE_THRESHOLD=70
APP__FRAUD__REVIEW_SCORE_THRESHOLD=40
APP__FRAUD__TRUST_FORWARDED_IP=false
APP__FRAUD__RATE_LIMIT_WINDOW_SECONDS=60
APP__FRAUD__RATE_LIMIT_MAX_REQUESTS_PER_IP=120
APP__FRAUD__IP_GEOLOCATION_ENABLED=false
APP__FRAUD__IP_GEOLOCATION_TIMEOUT_SECONDS=1.5
APP__FRAUD__IP_GEOLOCATION_BASE_URL=https://ipapi.co
APP__FRAUD__IP_GEOLOCATION_CACHE_TTL_SECONDS=300

# Optional Captcha Step-Up Configuration
# Recommended provider for most landings: turnstile (Cloudflare).
APP__FRAUD__CAPTCHA_ENABLED=false
APP__FRAUD__CAPTCHA_PROVIDER=turnstile
APP__FRAUD__CAPTCHA_SITE_KEY=
APP__FRAUD__CAPTCHA_SECRET_KEY=
APP__FRAUD__CAPTCHA_TIMEOUT_SECONDS=2.0
APP__FRAUD__CAPTCHA_VERIFY_URL=
APP__FRAUD__CAPTCHA_CHALLENGE_TTL_SECONDS=600
